{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    /* Target/runtime */
    "target": "ES2023",
    "lib": ["ES2023"],

    /* Node-style ESM resolution so imports like `node:path` work */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Types & paths */
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "types": ["node"],

    /* Strictness & lint-ish checks */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* For project references (if using root references) */
    "composite": true
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "*.config.ts",
    "scripts/**/*"
  ]
}
